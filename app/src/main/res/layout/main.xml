<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.main.MainActivity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTextView"
        tools:text="ADSFKDJHS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnBackupContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringTitleContact"
        app:layout_constraintTop_toBottomOf="@+id/txtTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnBackupSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringTitleSms"
        app:layout_constraintTop_toBottomOf="@+id/btnBackupContact"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnBackupCallLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringTitleCallLogs"
        app:layout_constraintTop_toBottomOf="@+id/btnBackupSms"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>